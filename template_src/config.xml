<?xml version='1.0' encoding='utf-8'?>
<widget id="com.swrve.cordova.minimal-integration" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Swrve Minimal Integration Teamplate</name>
    <description>
        Swrve Cordova Minimal Integration Template
    </description>
    <author email="support@swrve.com" href="http://cordova.io"> Swrve Inc </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="local" />
        <hook type="after_platform_add" src="hooks/ios-setup.sh"/>
    </platform>
    <plugin name="com.swrve.SwrvePlugin" spec="../cordova-sdk/public/SwrvePlugin/"/>
</widget>